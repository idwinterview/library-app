<div id="feature" class="floatLeft">
  <div id="featureHeading">
    <h1 class="floatLeft">My Account Overview</h1>
    <div class="clear"></div>
  </div>

  <%= render partial: 'shared/flash' %>

  <%= render 'account_details' %>

  <div id="featureWrap" class="floatLeft reports">
  	<h3 class="text-center">My Books</h3>

  	<table class="table table-striped table-hover">
  		<tr>
        <th>Date</th>
        <th>Title</th>
        <th>Author</th>
        <th>Status</th>
        <th>Action</th>
  		</tr>
  		<% @customer_books.each do |customer_book| -%>
  			<tr class="<%= cycle("rowA", "rowB") -%>">
          <td><%= customer_book.created_at.to_date %></td>
          <td><%= customer_book.bookable.title %></td>
          <td><%= customer_book.bookable.author %></td>
          <td><%= customer_book.status.titleize %></td>
          <td>
            <%= render 'shared/check_in_out_button', customer_book: customer_book %>
          </td>
        </tr>
      <% end -%>
    </table>

  </div>
</div>