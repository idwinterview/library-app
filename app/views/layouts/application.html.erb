<!DOCTYPE html>
<html>
  <head>
    <title>LibraryApp</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

	<body>
		<%= render :partial => 'shared/header' %>

		<div id="container">
      <% if current_admin? %>
        <%= render partial: 'shared/librarian_side_nav' %>
      <% else %>
        <%= render partial: 'shared/side_nav' %>
      <% end %>

      <% flash.each do |type, message| %>
        <div class="flash_<%= type %>">
          <p><%= message %></p>
        </div>
      <% end %>

   		<%= yield %>

			<div class="clear"></div>
		</div>

	</body>
</html>

